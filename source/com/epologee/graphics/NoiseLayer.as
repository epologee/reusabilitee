package com.epologee.graphics {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.BitmapDataChannel;	import flash.display.BlendMode;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.utils.getQualifiedClassName;		/**	 * @author Eric-Paul Lecluse | epologee.com ï¿½ 2008	 */	public class NoiseLayer extends MovieClip {		private var _bitmap : Bitmap;		private var _target : Sprite;		public function NoiseLayer(inTarget:Sprite) {			_target = inTarget;			_bitmap = new Bitmap();			_bitmap.blendMode = BlendMode.SCREEN;			_target.addChild(_bitmap);						update();			cacheAsBitmap = true;		}				public function update() : void {			if (_bitmap.bitmapData) _bitmap.bitmapData.dispose();						_bitmap.bitmapData = new BitmapData(_target.width, _target.height, false, 0xFFFFFF);						var band : int = 48;			var center : int = band;			_bitmap.bitmapData.noise(1, center - band, center + band, BitmapDataChannel.RED + BitmapDataChannel.GREEN + BitmapDataChannel.BLUE, true);		}		override public function toString() : String {			// com.epologee.graphics.NoiseLayer			var s : String = "";			// s = "[ " + name + " ]:";			return s + getQualifiedClassName(this);		}	}}