package com.epologee.development.stats {	import net.hires.debug.Stats;		import flash.events.Event;		/**	 * @author Eric-Paul Lecluse | epologee.com ï¿½ 2009	 */	public class AlignStats extends Stats {		public static const TOP_LEFT:String = "TL";		public static const TOP_RIGHT:String = "TR";		public static const BOTTOM_RIGHT : String = "BR";		public static const BOTTOM_LEFT : String = "BL";		//		private var _alignment : String;		public function AlignStats(inAlignment:String = TOP_RIGHT) {			super();			_alignment = inAlignment;			addEventListener(Event.ADDED_TO_STAGE, startAlignment, false, 0, true);		}				private function startAlignment(event : Event) : void {			event.target.removeEventListener(event.type, startAlignment);						stage.addEventListener(Event.RESIZE, align);			addEventListener(Event.REMOVED_FROM_STAGE, stopAlignment);			align(null);		}				private function stopAlignment(event : Event) : void {			event.target.removeEventListener(event.type, stopAlignment);			stage.removeEventListener(Event.RESIZE, align);						addEventListener(Event.ADDED_TO_STAGE, startAlignment, false, 0, true);		}		private function align(event : Event) : void {			switch (_alignment) {				default:				case TOP_LEFT:					// x = 0, y = 0 -> nothing to do here.					break;				case BOTTOM_LEFT:					y = stage.stageHeight - height;					break;				case BOTTOM_RIGHT:					y = stage.stageHeight - height;				case TOP_RIGHT:					x = stage.stageWidth - width;					break;			}		}	}}