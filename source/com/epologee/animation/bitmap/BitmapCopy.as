package com.epologee.animation.bitmap {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	import flash.display.PixelSnapping;	import flash.utils.getQualifiedClassName;		/**	 * @author Eric-Paul Lecluse | epologee.com (c) 2008	 */	public class BitmapCopy extends Bitmap {		private var _original:DisplayObjectContainer;		private var _transparent:Boolean;		public function BitmapCopy(inOriginal:DisplayObjectContainer, inTransparent:Boolean = false, inSmoothing:Boolean = true) {			_original = inOriginal;			_transparent = inTransparent;			super(null, PixelSnapping.NEVER, inSmoothing);			update();		}		public function replaceOriginal():void {			while (_original.numChildren) {				_original.removeChildAt(0);			}			_original.addChild(this);		}		public function update():void {//			var oSX:Number = _original.scaleX;//			var oSY:Number = _original.scaleY;//			_original.scaleX = _original.scaleY = 1;						bitmapData = new BitmapData(_original.width / _original.scaleX, _original.height / _original.scaleY, _transparent, 0x000000);			bitmapData.draw(_original);			//			_original.scaleX = oSX;//			_original.scaleY = oSY;		}		override public function toString():String {			// com.epologee.animation.bitmap.BitmapCopy			var s:String = "";			// s = "[ " + name + " ]:";			return s + getQualifiedClassName(this);		}	}}